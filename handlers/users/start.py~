@dp.message_handler()
async def unknown(message: types.Message):
    user_id = message.from_user.id
    is_admin = user_id in ADMINS

    if is_admin and message.text in ["â—€ï¸ Orqaga", "ğŸ  Bosh menyu"]:
        await message.answer("ğŸ‘¨â€ğŸ’¼ Admin panel", reply_markup=admin_kb())
    else:
        await message.answer("â„¹ï¸ Kerakli bo'limni tanlang:", reply_markup=main_menu(is_admin))

# ================ QO'SHIMCHA FUNKSIYALAR ================

def setup_database():
    """Bazani to'liq sozlash"""
    try:
        conn = sqlite3.connect(DB_PATH)
        c = conn.cursor()

        # Asosiy jadvallar
        c.execute('''CREATE TABLE IF NOT EXISTS models (
            id INTEGER PRIMARY KEY AUTOINCREMENT,
            name TEXT UNIQUE NOT NULL,
            order_num INTEGER DEFAULT 0,
            is_active BOOLEAN DEFAULT 1,
            default_sim_type TEXT DEFAULT 'physical',
            base_standard_price REAL DEFAULT 0,
            box_price_difference REAL DEFAULT -10,
            alternative_sim_price_difference REAL DEFAULT -5,
            created_at TIMESTAMP DEFAULT CURRENT_TIMESTAMP
        )''')

        c.execute('''CREATE TABLE IF NOT EXISTS storages (
            id INTEGER PRIMARY KEY AUTOINCREMENT,
            model_id INTEGER NOT NULL,
            size TEXT NOT NULL,
            price_difference REAL DEFAULT 0,
            is_standard BOOLEAN DEFAULT 0,
            UNIQUE(model_id, size),
            FOREIGN KEY (model_id) REFERENCES models (id) ON DELETE CASCADE
        )''')

        c.execute('''CREATE TABLE IF NOT EXISTS colors (
            id INTEGER PRIMARY KEY AUTOINCREMENT,
            model_id INTEGER NOT NULL,
            name TEXT NOT NULL,
            color_type TEXT DEFAULT 'standard',
            price_difference REAL DEFAULT 0,
            UNIQUE(model_id, name),
            FOREIGN KEY (model_id) REFERENCES models (id) ON DELETE CASCADE
        )''')

        c.execute('''CREATE TABLE IF NOT EXISTS batteries (
            id INTEGER PRIMARY KEY AUTOINCREMENT,
            model_id INTEGER NOT NULL,
            label TEXT NOT NULL,
            min_percent INTEGER DEFAULT 0,
            max_percent INTEGER DEFAULT 100,
            price_difference REAL DEFAULT 0,
            is_standard BOOLEAN DEFAULT 0,
            UNIQUE(model_id, label),
            FOREIGN KEY (model_id) REFERENCES models (id) ON DELETE CASCADE
        )''')

        c.execute('''CREATE TABLE IF NOT EXISTS replaced_parts (
            id INTEGER PRIMARY KEY AUTOINCREMENT,
            model_id INTEGER NOT NULL,
            part_type TEXT NOT NULL,
            price_reduction REAL DEFAULT 0,
            description TEXT,
            order_num INTEGER DEFAULT 0,
            is_active BOOLEAN DEFAULT 1,
            UNIQUE(model_id, part_type),
            FOREIGN KEY (model_id) REFERENCES models (id) ON DELETE CASCADE
        )''')

        c.execute('''CREATE TABLE IF NOT EXISTS part_combinations (
            id INTEGER PRIMARY KEY AUTOINCREMENT,
            model_id INTEGER NOT NULL,
            name TEXT NOT NULL,
            custom_price REAL DEFAULT 0,
            priority INTEGER DEFAULT 0,
            is_active BOOLEAN DEFAULT 1,
            created_at TIMESTAMP DEFAULT CURRENT_TIMESTAMP,
            FOREIGN KEY (model_id) REFERENCES models (id) ON DELETE CASCADE
        )''')

        c.execute('''CREATE TABLE IF NOT EXISTS combination_parts (
            id INTEGER PRIMARY KEY AUTOINCREMENT,
            combination_id INTEGER NOT NULL,
            part_id INTEGER NOT NULL,
            FOREIGN KEY (combination_id) REFERENCES part_combinations (id) ON DELETE CASCADE,
            FOREIGN KEY (part_id) REFERENCES replaced_parts (id) ON DELETE CASCADE
        )''')

        c.execute('''CREATE TABLE IF NOT EXISTS prices (
            id INTEGER PRIMARY KEY AUTOINCREMENT,
            model_id INTEGER NOT NULL,
            storage_size TEXT NOT NULL,
            color_name TEXT,
            sim_type TEXT NOT NULL,
            battery_label TEXT NOT NULL,
            has_box BOOLEAN DEFAULT 1,
            damage_pct TEXT DEFAULT 'Yangi',
            price REAL,
            combination_id INTEGER,
            manual_adjustment REAL DEFAULT 0,
            note TEXT,
            created_at TIMESTAMP DEFAULT CURRENT_TIMESTAMP,
            updated_at TIMESTAMP DEFAULT CURRENT_TIMESTAMP,
            UNIQUE(model_id, storage_size, color_name, sim_type, battery_label, has_box, damage_pct),
            FOREIGN KEY (model_id) REFERENCES models (id) ON DELETE CASCADE,
            FOREIGN KEY (combination_id) REFERENCES part_combinations (id) ON DELETE SET NULL
        )''')

        c.execute('''CREATE TABLE IF NOT EXISTS price_parts (
            id INTEGER PRIMARY KEY AUTOINCREMENT,
            price_id INTEGER NOT NULL,
            part_id INTEGER NOT NULL,
            FOREIGN KEY (price_id) REFERENCES prices (id) ON DELETE CASCADE,
            FOREIGN KEY (part_id) REFERENCES replaced_parts (id) ON DELETE CASCADE
        )''')

        c.execute('''CREATE TABLE IF NOT EXISTS users (
            id INTEGER PRIMARY KEY AUTOINCREMENT,
            user_id BIGINT UNIQUE NOT NULL,
            username TEXT,
            first_name TEXT,
            last_name TEXT,
            language_code TEXT,
            is_premium BOOLEAN DEFAULT 0,
            created_at TIMESTAMP DEFAULT CURRENT_TIMESTAMP,
            last_active TIMESTAMP DEFAULT CURRENT_TIMESTAMP
        )''')

        c.execute('''CREATE TABLE IF NOT EXISTS price_inquiries (
            id INTEGER PRIMARY KEY AUTOINCREMENT,
            user_id BIGINT NOT NULL,
            model_name TEXT NOT NULL,
            storage TEXT NOT NULL,
            color TEXT,
            sim TEXT NOT NULL,
            battery TEXT NOT NULL,
            box BOOLEAN NOT NULL,
            damage TEXT,
            price TEXT,
            created_at TIMESTAMP DEFAULT CURRENT_TIMESTAMP,
            FOREIGN KEY (user_id) REFERENCES users (user_id)
        )''')

        c.execute('''CREATE TABLE IF NOT EXISTS parts (
            id INTEGER PRIMARY KEY AUTOINCREMENT,
            model_id INTEGER NOT NULL,
            part_name TEXT NOT NULL,
            UNIQUE(model_id, part_name),
            FOREIGN KEY (model_id) REFERENCES models (id) ON DELETE CASCADE
        )''')

        # Indexlar
        c.execute('CREATE INDEX IF NOT EXISTS idx_prices_model ON prices (model_id)')
        c.execute('CREATE INDEX IF NOT EXISTS idx_prices_created ON prices (created_at DESC)')
        c.execute('CREATE INDEX IF NOT EXISTS idx_inquiries_user ON price_inquiries (user_id)')
        c.execute('CREATE INDEX IF NOT EXISTS idx_inquiries_created ON price_inquiries (created_at DESC)')
        c.execute('CREATE INDEX IF NOT EXISTS idx_models_active ON models (is_active)')
        c.execute('CREATE INDEX IF NOT EXISTS idx_storages_model ON storages (model_id)')
        c.execute('CREATE INDEX IF NOT EXISTS idx_colors_model ON colors (model_id)')
        c.execute('CREATE INDEX IF NOT EXISTS idx_batteries_model ON batteries (model_id)')

        conn.commit()
        conn.close()

        print("âœ… Database setup completed successfully")
        return True

    except Exception as e:
        print(f"âŒ Database setup error: {e}")
        traceback.print_exc()
        return False

def check_database_integrity():
    """Baza butunligini tekshirish"""
    try:
        conn = sqlite3.connect(DB_PATH)
        c = conn.cursor()

        checks = []

        # 1. Modellar soni
        c.execute("SELECT COUNT(*) FROM models")
        models_count = c.fetchone()[0]
        checks.append(f"âœ… Modellar: {models_count} ta")

        # 2. Narxlar soni
        c.execute("SELECT COUNT(*) FROM prices")
        prices_count = c.fetchone()[0]
        checks.append(f"âœ… Narxlar: {prices_count} ta")

        # 3. Foydalanuvchilar soni
        c.execute("SELECT COUNT(*) FROM users")
        users_count = c.fetchone()[0]
        checks.append(f"âœ… Foydalanuvchilar: {users_count} ta")

        # 4. So'rovlar soni
        c.execute("SELECT COUNT(*) FROM price_inquiries")
        inquiries_count = c.fetchone()[0]
        checks.append(f"âœ… So'rovlar: {inquiries_count} ta")

        # 5. Xotiralar soni
        c.execute("SELECT COUNT(*) FROM storages")
        storages_count = c.fetchone()[0]
        checks.append(f"âœ… Xotiralar: {storages_count} ta")

        # 6. Ranglar soni
        c.execute("SELECT COUNT(*) FROM colors")
        colors_count = c.fetchone()[0]
        checks.append(f"âœ… Ranglar: {colors_count} ta")

        # 7. Batareyalar soni
        c.execute("SELECT COUNT(*) FROM batteries")
        batteries_count = c.fetchone()[0]
        checks.append(f"âœ… Batareyalar: {batteries_count} ta")

        # 8. Qismlar soni
        c.execute("SELECT COUNT(*) FROM parts")
        parts_count = c.fetchone()[0]
        checks.append(f"âœ… Qismlar: {parts_count} ta")

        conn.close()

        print("\n" + "=" * 50)
        print("ğŸ“Š BAZA TEKSHIRUVI")
        print("=" * 50)
        for check in checks:
            print(check)
        print("=" * 50 + "\n")

        return True

    except Exception as e:
        print(f"âŒ Baza tekshiruvida xato: {e}")
        return False

def create_sample_data():
    """Namuna ma'lumotlar yaratish (test uchun)"""
    try:
        conn = sqlite3.connect(DB_PATH)
        c = conn.cursor()

        # 1. Model qo'shish
        c.execute("""\
            INSERT OR IGNORE INTO models (name, default_sim_type, base_standard_price)
            VALUES ('iPhone 15 Pro Max', 'esim', 1200)
        """)

        c.execute("SELECT id FROM models WHERE name = 'iPhone 15 Pro Max'")
        model_id = c.fetchone()[0]

        # 2. Xotiralar
        storages = [
            ('256GB', 0, True),
            ('512GB', 100, False),
            ('1TB', 200, False),
        ]
        for size, diff, is_std in storages:
            c.execute("""\
                INSERT OR IGNORE INTO storages (model_id, size, price_difference, is_standard)
                VALUES (?, ?, ?, ?)
            """, (model_id, size, diff, is_std))

        # 3. Ranglar
        colors = [
            ('Natural Titanium', 'standard', 0),
            ('Blue Titanium', 'premium', 0),
            ('White Titanium', 'premium', 0),
            ('Black Titanium', 'standard', 0),
        ]
        for name, color_type, diff in colors:
            c.execute("""\
                INSERT OR IGNORE INTO colors (model_id, name, color_type, price_difference)
                VALUES (?, ?, ?, ?)
            """, (model_id, name, color_type, diff))

        # 4. Batareyalar
        batteries = [
            ('100%', 100, 100, 0, True),
            ('98-99%', 98, 99, -10, False),
            ('95-97%', 95, 97, -20, False),
            ('90-93%', 90, 93, -30, False),
        ]
        for label, min_p, max_p, diff, is_std in batteries:
            c.execute("""\
                INSERT OR IGNORE INTO batteries (model_id, label, min_percent, max_percent, price_difference, is_standard)
                VALUES (?, ?, ?, ?, ?, ?)
            """, (model_id, label, min_p, max_p, diff, is_std))

        # 5. Qismlar
        parts = [
            ('battery', -100, 1),
            ('screen', -150, 2),
            ('back_cover', -80, 3),
        ]
        for part_type, reduction, order in parts:
            c.execute("""\
                INSERT OR IGNORE INTO parts (model_id, part_name)
                VALUES (?, ?)
            """, (model_id, part_type))

        # 6. Namuna narxlar
        sample_prices = [
            ('256GB', 'Natural Titanium', 'esim', '100%', 1, 'Yangi', 1200),
            ('256GB', 'Natural Titanium', 'esim', '98-99%', 1, 'Yangi', 1190),
            ('512GB', 'Blue Titanium', 'esim', '100%', 1, 'Yangi', 1300),
        ]
        for storage, color, sim, battery, box, damage, price in sample_prices:
            c.execute("""\
                INSERT OR IGNORE INTO prices
                (model_id, storage_size, color_name, sim_type, battery_label, has_box, damage_pct, price)
                VALUES (?, ?, ?, ?, ?, ?, ?, ?)
            """, (model_id, storage, color, sim, battery, box, damage, price))

        conn.commit()
        conn.close()

        print("âœ… Namuna ma'lumotlar yaratildi!")
        return True

    except Exception as e:
        print(f"âŒ Namuna ma'lumotlar yaratishda xato: {e}")
        return False

def backup_database():
    """Bazani zaxiralash"""
    try:
        if not os.path.exists(DB_PATH):
            print("âŒ Baza fayli topilmadi!")
            return False

        backup_dir = "backups"
        if not os.path.exists(backup_dir):
            os.makedirs(backup_dir)

        timestamp = datetime.now().strftime("%Y%m%d_%H%M%S")
        backup_path = os.path.join(backup_dir, f"iphone_bot_backup_{timestamp}.db")

        # Faylni nusxalash
        import shutil
        shutil.copy2(DB_PATH, backup_path)

        file_size = os.path.getsize(backup_path) / 1024 # KB
        print(f"âœ… Baza zaxiralandi: {backup_path} ({file_size:.1f} KB)")
        return True

    except Exception as e:
        print(f"âŒ Bazani zaxiralashda xato: {e}")
        return False

def optimize_database():
    """Bazani optimizatsiya qilish"""
    try:
        conn = sqlite3.connect(DB_PATH)
        c = conn.cursor()

        print("ğŸ”„ Baza optimizatsiya qilinmoqda...")

        # 1. VACUUM - bo'sh joyni tozalash
        c.execute("VACUUM")
        print("âœ… VACUUM bajarildi")

        # 2. ANALYZE - statistikani yangilash
        c.execute("ANALYZE")
        print("âœ… ANALYZE bajarildi")

        # 3. Indekslarni qayta yaratish
        c.execute("REINDEX")
        print("âœ… REINDEX bajarildi")

        conn.commit()
        conn.close()

        print("âœ… Baza muvaffaqiyatli optimizatsiya qilindi!")
        return True

    except Exception as e:
        print(f"âŒ Bazani optimizatsiya qilishda xato: {e}")
        return False

# ================ XATO HANDLERLARI ================

@dp.errors_handler()
async def errors_handler(update, exception):
    """Global xato handler"""
    try:
        if isinstance(exception, RetryAfter):
            print(f"âš ï¸ RetryAfter: {exception.timeout} soniya kutish kerak")
            await asyncio.sleep(exception.timeout + 1)
            return True

        if isinstance(exception, NetworkError):
            print(f"âš ï¸ Network xatosi: {exception}")
            await asyncio.sleep(3)
            return True

        print(f"âŒ Kutilmagan xato: {exception}")
        traceback.print_exc()

        # Adminlarga xabar yuborish
        error_text = f"âŒ Bot xatosi:\n<code>{str(exception)[:500]}</code>"
        for admin_id in ADMINS:
            try:
                await bot.send_message(admin_id, error_text, parse_mode="HTML")
            except:
                pass

        return True

    except Exception as e:
        print(f"âŒ Error handler'da xato: {e}")
        return True

