# handlers/users/payment.py - YANGILANGAN VERSIYA (user_database bilan)
import asyncio
import logging
from datetime import datetime

from aiogram import types
from aiogram.dispatcher import FSMContext
from aiogram.dispatcher.filters.state import State, StatesGroup
from aiogram.types import InlineKeyboardMarkup, InlineKeyboardButton

from loader import dp, bot
from data.config import ADMINS
from keyboards.default.knopkalar import main_menu
from utils.db_api.user_database import add_balance, get_user_balance

# Logger
logger = logging.getLogger(__name__)


# ================ HOLATLAR ================

class PaymentState(StatesGroup):
    waiting_tariff = State()
    waiting_check = State()


# ================ TARIFLAR ================
# API bilan birga ishlatish uchun - yoki to'g'ridan-to'g'ri qat'iy qilingan tariflar

TARIFFS = [
    {
        'id': 1,
        'name': 'ğŸ’ START',
        'count': 10,
        'price': 10000,
    },
    {
        'id': 2,
        'name': 'ğŸ”¥ STANDARD',
        'count': 25,
        'price': 22000,  # 12% chegirma
    },
    {
        'id': 3,
        'name': 'â­ PRO',
        'count': 50,
        'price': 40000,  # 20% chegirma
    },
    {
        'id': 4,
        'name': 'ğŸ‘‘ VIP',
        'count': 100,
        'price': 70000,  # 30% chegirma
    },
]


# ================ KLAVIATURA FUNKSIYALARI ================

def create_tariff_keyboard():
    """Tariflar uchun inline klaviatura"""
    markup = InlineKeyboardMarkup(row_width=1)

    for tariff in TARIFFS:
        price_per_one = tariff['price'] / tariff['count']
        button_text = f"{tariff['name']} - {tariff['count']} ta | {tariff['price']:,.0f} so'm"

        markup.add(
            InlineKeyboardButton(
                text=button_text,
                callback_data=f"tariff_{tariff['id']}"
            )
        )

    markup.add(
        InlineKeyboardButton(
            text="â—€ï¸ Orqaga",
            callback_data="back_to_main"
        )
    )

    return markup


def create_payment_keyboard(payment_url=''):
    """To'lov klaviaturasi"""
    markup = InlineKeyboardMarkup(row_width=1)

    if payment_url:
        markup.add(
            InlineKeyboardButton(
                text="ğŸ’³ To'lov qilish (Payme)",
                url=payment_url
            )
        )

    markup.add(
        InlineKeyboardButton(
            text="âœ… To'lov qildim - Tekshirish",
            callback_data="check_payment"
        )
    )

    markup.add(
        InlineKeyboardButton(
            text="âŒ Bekor qilish",
            callback_data="cancel_payment"
        )
    )

    return markup


# ================ MESSAGE HANDLERS ================

@dp.message_handler(lambda m: m.text == "ğŸ’° Hisobni to'ldirish", state='*')
async def show_tariffs(message: types.Message, state: FSMContext):
    """Tariflarni ko'rsatish"""
    await state.finish()

    logger.info(f"User {message.from_user.id} started payment process")

    # Balansni ko'rsatish
    balance_result = get_user_balance(message.from_user.id)
    free_trials = balance_result.get('free_trials_left', 0)
    balance = balance_result.get('balance', 0)

    text = f"""ğŸ’° <b>HISOB TO'LDIRISH</b>

ğŸ’ <b>Sizning hisobingiz:</b>
ğŸ Bepul: {free_trials} ta
ğŸ’° Pullik: {balance} ta

ğŸ“‹ <b>Tariflar:</b>

"""

    for tariff in TARIFFS:
        price_per_one = tariff['price'] / tariff['count']
        text += f"<b>{tariff['name']}</b>\n"
        text += f"   â€¢ Narxi: {tariff['price']:,.0f} so'm\n"
        text += f"   â€¢ Soni: {tariff['count']} ta narxlash\n"
        text += f"   â€¢ Bitta: {price_per_one:,.0f} so'm\n\n"

    text += "â¬‡ï¸ <i>Quyidagi tariflardan birini tanlang:</i>"

    markup = create_tariff_keyboard()

    await PaymentState.waiting_tariff.set()
    await message.answer(text, reply_markup=markup, parse_mode="HTML")


# ================ CALLBACK HANDLERS ================

@dp.callback_query_handler(
    lambda c: c.data == "back_to_main",
    state=[PaymentState.waiting_tariff, PaymentState.waiting_check, None]
)
async def back_to_main_callback(callback: types.CallbackQuery, state: FSMContext):
    """Orqaga bosh menyuga"""
    await callback.answer()
    await state.finish()

    try:
        await callback.message.delete()
    except Exception as e:
        logger.warning(f"Could not delete message: {e}")

    await callback.message.answer(
        "ğŸ  Bosh menyu",
        reply_markup=main_menu(callback.from_user.id in ADMINS)
    )


@dp.callback_query_handler(
    lambda c: c.data and c.data.startswith("tariff_"),
    state=PaymentState.waiting_tariff
)
async def process_tariff_selection(callback: types.CallbackQuery, state: FSMContext):
    """Tarif tanlandi - TO'LOV YARATISH"""
    await callback.answer()

    try:
        tariff_id = int(callback.data.split("_")[1])
    except (ValueError, IndexError):
        await callback.answer("âŒ Xato tarif", show_alert=True)
        return

    # Tarifni topish
    tariff = next((t for t in TARIFFS if t['id'] == tariff_id), None)

    if not tariff:
        await callback.answer("âŒ Tarif topilmadi", show_alert=True)
        return

    logger.info(f"User {callback.from_user.id} selected tariff {tariff_id}")

    # Order ID yaratish (oddiy versiya)
    order_id = f"ORDER_{callback.from_user.id}_{int(datetime.now().timestamp())}"

    # DEMO: Haqiqiy to'lov tizimi o'rniga
    # Siz bu yerda haqiqiy Payme API ni integratsiya qilishingiz kerak
    payment_url = f"https://payme.uz/checkout/{order_id}"  # DEMO URL

    await state.update_data(
        order_id=order_id,
        tariff_id=tariff_id,
        tariff_name=tariff['name'],
        amount=tariff['price'],
        count=tariff['count'],
        payment_time=datetime.now().isoformat()
    )

    text = f"""ğŸ’³ <b>TO'LOV MA'LUMOTLARI</b>

ğŸ†” <b>Order ID:</b> <code>{order_id}</code>
ğŸ·ï¸ <b>Tarif:</b> {tariff['name']}
ğŸ’° <b>Summa:</b> {tariff['price']:,.0f} so'm
ğŸ“¦ <b>Narxlashlar:</b> {tariff['count']} ta

<b>To'lov qilish uchun:</b>
1ï¸âƒ£ Quyidagi tugma orqali Payme ga o'ting
2ï¸âƒ£ To'lovni amalga oshiring
3ï¸âƒ£ "âœ… To'lov qildim" tugmasini bosing

â³ To'lov 30 daqiqa ichida amalga oshirilishi kerak!

<i>âš ï¸ DEMO rejim: Hozircha "To'lov qildim" tugmasini bosganda avtomatik qo'shiladi</i>
"""

    markup = create_payment_keyboard(payment_url)

    try:
        await callback.message.delete()
    except Exception as e:
        logger.warning(f"Could not delete message: {e}")

    await PaymentState.waiting_check.set()
    await callback.message.answer(text, reply_markup=markup, parse_mode="HTML")


@dp.callback_query_handler(
    lambda c: c.data == "check_payment",
    state=PaymentState.waiting_check
)
async def check_payment_callback(callback: types.CallbackQuery, state: FSMContext):
    """To'lovni tekshirish"""
    await callback.answer("ğŸ”„ Tekshirilmoqda...")

    data = await state.get_data()
    order_id = data.get('order_id')
    tariff_name = data.get('tariff_name')
    amount = data.get('amount')
    count = data.get('count')

    if not order_id:
        logger.error(f"Order ID not found in state for user {callback.from_user.id}")
        await callback.answer(
            "âŒ Order ID topilmadi. Iltimos, qaytadan urinib ko'ring.",
            show_alert=True
        )
        return

    logger.info(f"Manual check payment: order_id={order_id}, user={callback.from_user.id}")

    # DEMO: Haqiqiy to'lov tizimi o'rniga - avtomatik muvaffaqiyatli
    # Siz bu yerda haqiqiy Payme API bilan to'lovni tekshirishingiz kerak

    # Balansga qo'shish
    result = add_balance(
        telegram_id=callback.from_user.id,
        count=count,
        order_id=order_id,
        tariff_name=tariff_name,
        amount=amount
    )

    if result.get('success'):
        balance = result.get('balance', 0)

        text = f"""âœ… <b>TO'LOV MUVAFFAQIYATLI!</b>

ğŸ’° <b>Yangi balans:</b> {balance} ta narxlash
ğŸ“¦ <b>Qo'shildi:</b> {count} ta
ğŸ’µ <b>Summa:</b> {amount:,.0f} so'm

ğŸ‰ Endi siz telefonlarni narxlashingiz mumkin!
"""

        try:
            await callback.message.edit_text(text, parse_mode="HTML")
        except Exception as e:
            logger.warning(f"Could not edit message: {e}")
            await callback.message.answer(
                text,
                reply_markup=main_menu(callback.from_user.id in ADMINS),
                parse_mode="HTML"
            )

        await state.finish()
        await callback.answer("âœ… To'lov muvaffaqiyatli!")
    else:
        error_msg = result.get('error', 'Xatolik yuz berdi')
        await callback.answer(f"âŒ {error_msg}", show_alert=True)


@dp.callback_query_handler(
    lambda c: c.data == "cancel_payment",
    state=PaymentState.waiting_check
)
async def cancel_payment_callback(callback: types.CallbackQuery, state: FSMContext):
    """To'lovni bekor qilish"""
    data = await state.get_data()
    order_id = data.get('order_id', 'unknown')

    logger.info(f"User cancelled payment: order_id={order_id}, user={callback.from_user.id}")

    await callback.answer("âŒ To'lov bekor qilindi")

    try:
        await callback.message.delete()
    except Exception as e:
        logger.warning(f"Could not delete message: {e}")

    await state.finish()

    await callback.message.answer(
        "ğŸ  Bosh menyu",
        reply_markup=main_menu(callback.from_user.id in ADMINS)
    )


# ================ BALANS KO'RISH ================

@dp.message_handler(lambda m: m.text == "ğŸ’¤ Mening hisobim", state='*')
async def show_my_account(message: types.Message, state: FSMContext):
    """Balansni ko'rsatish"""
    await state.finish()

    logger.info(f"User {message.from_user.id} checking account")

    result = get_user_balance(message.from_user.id)

    if not result.get('success'):
        logger.error(f"Failed to get balance for user {message.from_user.id}")
        await message.answer("âŒ Ma'lumotlar yuklanmadi. Iltimos, keyinroq urinib ko'ring.")
        return

    free_trials = result.get('free_trials_left', 0)
    balance = result.get('balance', 0)
    total_pricings = result.get('total_pricings', 0)
    full_name = result.get('full_name', message.from_user.full_name)
    phone_number = result.get('phone_number', 'Kiritilmagan')

    text = f"""ğŸ’¤ <b>SHAXSIY KABINET</b>

ğŸ‘¤ <b>Ism:</b> {full_name}
ğŸ“ <b>Telefon:</b> {phone_number}
ğŸ†” <b>ID:</b> <code>{message.from_user.id}</code>

ğŸ <b>Bepul urinishlar:</b> {free_trials} ta
ğŸ’° <b>Balans:</b> {balance} ta
ğŸ“Š <b>Jami narxlashlar:</b> {total_pricings} ta
"""

    if free_trials <= 0 and balance <= 0:
        text += "\nâš ï¸ <b>Balans tugadi!</b>\n"
        text += "ğŸ’¡ Balansni to'ldirish uchun <b>'ğŸ’° Hisobni to'ldirish'</b> tugmasini bosing."

    await message.answer(text, parse_mode="HTML")


# ================ ADMIN TO'LOV QILISH ================

@dp.message_handler(lambda m: m.text and m.text.startswith("/addbalance"), state='*')
async def admin_add_balance_command(message: types.Message, state: FSMContext):
    """Admin balans qo'shish: /addbalance USER_ID COUNT"""
    if message.from_user.id not in ADMINS:
        return

    try:
        parts = message.text.split()
        if len(parts) != 3:
            await message.answer("âŒ Format: /addbalance USER_ID COUNT")
            return

        user_id = int(parts[1])
        count = int(parts[2])

        from utils.db_api.user_database import admin_add_balance

        result = admin_add_balance(user_id, count)

        if result.get('success'):
            await message.answer(
                f"âœ… {count} ta narxlash qo'shildi!\n"
                f"ğŸ’° Yangi balans: {result.get('balance', 0)} ta"
            )
        else:
            await message.answer(f"âŒ Xato: {result.get('error', 'Unknown')}")

    except Exception as e:
        await message.answer(f"âŒ Xato: {e}")


@dp.message_handler(lambda m: m.text and m.text.startswith("/resetfree"), state='*')
async def admin_reset_free_command(message: types.Message, state: FSMContext):
    """Admin bepul urinishlarni tiklash: /resetfree USER_ID COUNT"""
    if message.from_user.id not in ADMINS:
        return

    try:
        parts = message.text.split()
        if len(parts) < 2:
            await message.answer("âŒ Format: /resetfree USER_ID [COUNT]")
            return

        user_id = int(parts[1])
        count = int(parts[2]) if len(parts) > 2 else 5

        from utils.db_api.user_database import admin_reset_free_trials

        result = admin_reset_free_trials(user_id, count)

        if result.get('success'):
            await message.answer(f"âœ… Bepul urinishlar tiklandi: {count} ta")
        else:
            await message.answer(f"âŒ Xato: {result.get('error', 'Unknown')}")

    except Exception as e:
        await message.answer(f"âŒ Xato: {e}")